" Set
set nu
set relativenumber
set highlight to 1000 ms
set incsearch
set scrolloff=8

" Plugins
set NERDTree

" Remaps
let mapleader = " "
noremap <Space> <Nop>

" Tabbing
nnoremap <S-l> gt
vnoremap <S-l> gt
nnoremap <S-h> gT
vnoremap <S-h> gT
nnoremap <leader>q :wq<CR>
vnoremap <leader>q :wq<CR>
nnoremap <leader>t :tabo<CR>
vnoremap <leader>t :tabo<CR>

" Clipboard buffer set as default
nnoremap d "*d
nnoremap D "*d$
nnoremap dd "*dd
nnoremap y "*y
nnoremap yy "*yy
nnoremap Y "*y$
nnoremap p "*p
nnoremap P "*P
vnoremap d "*d
vnoremap D "*d$
vnoremap dd "*dd
vnoremap y "*y
vnoremap yy "*yy
vnoremap Y "*y$
vnoremap p "*p
vnoremap P "*P

" Terminal
nnoremap <C-t> :action ActivateTerminalToolWindow<CR>

" Digg in the pig
nnoremap <leader>s "ayiw :%s/\<<C-r>a\>/<C-r>a/gI<Left><Left><Left>
nnoremap <leader>r :action RenameElement<CR>
nnoremap <leader>= :action ReformatCode<CR>

" Documentation
nnoremap <C-k> :action QuickJavaDoc<CR>

" Navigation
nnoremap <C-p> :action GotoFile<CR>
nnoremap <leader>e :NERDTreeFocus<CR>
nnoremap <C-e> :action RecentFiles<CR>
nnoremap <C-d> <C-d>zz
nnoremap <C-o> <C-o>zz
nnoremap <C-i> <C-i>zz
nnoremap <C-u> <C-u>zz

" Code completion
inoremap <C-y> :action EditorChooseLookupItem<CR>

" Goto
nnoremap gu :action ShowUsages<CR>
nnoremap gc :action GotoClass<CR>
nnoremap gi :action ReSharperGotoImplementation<CR>
nnoremap gd :action GotToDeclaration<CR>
nnoremap gs :action GotToSuperMethod<CR>
nnoremap gt :action GotoTest<CR>
nnoremap gD :action GotoTypeDeclaration<CR>
nnoremap g[ :action GotoPreviousError<CR>
nnoremap g] :action GotoNextError<CR>

" Debugging
nnoremap <leader>d :action Debug<CR>
nnoremap <leader>b :action ToggleLineBreakpoint<CR>
nnoremap <leader>n :action Resume<CR>
nnoremap <leader>j :action StepOver<CR>
nnoremap <leader>k :action StepBack<CR>
nnoremap <leader>h :action StepOut<CR>
nnoremap <leader>l :action StepInto<CR>
